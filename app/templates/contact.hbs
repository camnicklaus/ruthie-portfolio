<div class="w-auto mx-6 sm:mx-0 flex flex-col sm:flex-row">
  <div class="flex-1">
    <form {{on 'submit' (perform this.onSubmit)}} name="contactForm" id="contactForm" class="max-w-lg">
      <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full px-3">
          <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="email">
            E-mail
          </label>
          <input
            class={{concat
              "appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white"
              (if this.isInvalidEmail " border-red-500" " border-gray-200 focus:border-gray-500")
            }}
            id="email"
            name="email"
            value={{this.email}}
            oninput={{this.setEmail}}
            {{on "blur" this.validate}}
          />
          {{#if this.isInvalidEmail}}
            <p class="text-red-500 text-xs italic">
              invalid email address
            </p>
          {{/if}}
        </div>
      </div>
      <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full px-3">
          <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="message">
            Message
          </label>
          <Textarea
            class=" no-resize appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500 h-48 resize-none"
            id="message"
            @value={{this.message}}
            name="message"
          />
        </div>
      </div>
      <div class="md:flex md:items-center">
        <div class="md:w-1/3">
          <button
            class="shadow bg-teal-400 hover:bg-teal-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded"
            type="submit">
            Send
          </button>
        </div>
        <div class="md:w-2/3"></div>
      </div>
    </form>
  </div>
  <div class="flex-1">
    <div class="text-lg text-gray-700 font-semibold mb-1">Ruthie Nicklaus</div>
    <a href="mailto:ruthiesuniform@gmail.com" class="block text-base text-gray-600">
      ruthiesuniform@gmail.com
    </a>
    <a class="text-base text-gray-600" href="tel:206-218-8222">
      206-218-8222
    </a>
  </div>
</div>